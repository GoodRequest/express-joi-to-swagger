{
    "compilerOptions": {
		"esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
    	"outDir": "./dist",
		"sourceMap": true,
        "noImplicitAny": true,
		"declaration": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"allowJs": true,
		"typeRoots" : [
            "./src/types",
			"node_modules/@types"
        ]
    },
    "include": [
		"./src/**/*",
	],
	"exclude": [
		"node_modules",
		"dist"
    ]
}
