{
    "compilerOptions": {
		"esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
    	"outDir": "./dist",
		"sourceMap": true,
        "noImplicitAny": true,
		"strictNullChecks": true,
		"typeRoots" : [
            "./src/types",
            "node_modules/@types"
        ]
    },
	"ts-node": {
		"transpileOnly": true
	},
    "include": [
        "./demo/**/*",
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
    ]
}
